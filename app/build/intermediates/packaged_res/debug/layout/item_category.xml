<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:padding="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp">
    
    <LinearLayout
        android:id="@+id/categoryContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp"
        android:background="@drawable/bg_category_item"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Icon Image -->
        <ImageView
            android:id="@+id/categoryIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_corner_bg"
            android:clipToOutline="true" />

        <!-- Title Text -->
        <TextView
            android:id="@+id/categoryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="11sp"
            android:textColor="#333333"
            android:layout_marginTop="6dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center" />
            
    </LinearLayout>

    <!-- Badge (Floating outside container) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/categoryBadgeContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="50dp"
        app:cardElevation="4dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/categoryContainer"
        app:layout_constraintEnd_toEndOf="@id/categoryContainer"
        android:layout_marginTop="-8dp"
        android:layout_marginEnd="-8dp">

        <TextView
            android:id="@+id/categoryBadgeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:text="New" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>

