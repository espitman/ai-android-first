<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layoutDirection="rtl">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray_placeholder" />

        <!-- Code Badge Skeleton -->
        <View
            android:layout_width="80dp"
            android:layout_height="24dp"
            android:layout_gravity="top|left"
            android:layout_margin="16dp"
            android:background="@drawable/rounded_corner_bg"
            android:backgroundTint="#80FFFFFF" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Title Skeleton -->
        <View
            android:layout_width="250dp"
            android:layout_height="24dp"
            android:background="@color/gray_placeholder" />

        <View
            android:layout_width="150dp"
            android:layout_height="24dp"
            android:layout_marginTop="8dp"
            android:background="@color/gray_placeholder" />

        <!-- Rating/Location Skeleton -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <View
                android:layout_width="40dp"
                android:layout_height="16dp"
                android:background="@color/gray_placeholder" />

            <View
                android:layout_width="100dp"
                android:layout_height="16dp"
                android:layout_marginStart="8dp"
                android:background="@color/gray_placeholder" />

            <View
                android:layout_width="80dp"
                android:layout_height="16dp"
                android:layout_marginStart="16dp"
                android:background="@color/gray_placeholder" />
        </LinearLayout>



        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:background="#F0F0F0" />

        <!-- Host Section Skeleton -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/skeleton_circle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <View
                    android:layout_width="120dp"
                    android:layout_height="18dp"
                    android:background="@color/gray_placeholder" />

                <View
                    android:layout_width="180dp"
                    android:layout_height="14dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/gray_placeholder" />
            </LinearLayout>
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:background="#F0F0F0" />

        <!-- Secondary Badges Skeleton -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp">
            <View android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginVertical="8dp" android:background="@color/gray_placeholder" />
            <View android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginVertical="8dp" android:background="@color/gray_placeholder" />
        </LinearLayout>

        <!-- Main Badges Skeleton -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:background="#F0F0F0" />
        <View
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_marginTop="24dp"
            android:background="@color/gray_placeholder" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp">
            <View android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginVertical="8dp" android:background="@color/gray_placeholder" />
            <View android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginVertical="8dp" android:background="@color/gray_placeholder" />
        </LinearLayout>

        <!-- Description Skeleton -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:background="#F0F0F0" />

        <View
            android:layout_width="180dp"
            android:layout_height="22dp"
            android:layout_marginTop="20dp"
            android:background="@color/gray_placeholder" />

        <View
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:layout_marginTop="16dp"
            android:background="@color/gray_placeholder" />

        <View
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:layout_marginTop="8dp"
            android:background="@color/gray_placeholder" />

        <View
            android:layout_width="200dp"
            android:layout_height="14dp"
            android:layout_marginTop="8dp"
            android:background="@color/gray_placeholder" />

        <View
            android:layout_width="120dp"
            android:layout_height="18dp"
            android:layout_marginTop="16dp"
            android:background="@color/gray_placeholder" />

        <!-- Amenities Skeleton -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:background="#F0F0F0" />

        <View
            android:layout_width="150dp"
            android:layout_height="22dp"
            android:layout_marginTop="20dp"
            android:background="@color/gray_placeholder" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:columnCount="4">

            <View android:layout_width="60dp" android:layout_height="60dp" android:layout_margin="8dp" android:background="@color/gray_placeholder" />
            <View android:layout_width="60dp" android:layout_height="60dp" android:layout_margin="8dp" android:background="@color/gray_placeholder" />
            <View android:layout_width="60dp" android:layout_height="60dp" android:layout_margin="8dp" android:background="@color/gray_placeholder" />
            <View android:layout_width="60dp" android:layout_height="60dp" android:layout_margin="8dp" android:background="@color/gray_placeholder" />
            <View android:layout_width="60dp" android:layout_height="60dp" android:layout_margin="8dp" android:background="@color/gray_placeholder" />
            <View android:layout_width="60dp" android:layout_height="60dp" android:layout_margin="8dp" android:background="@color/gray_placeholder" />
            <View android:layout_width="60dp" android:layout_height="60dp" android:layout_margin="8dp" android:background="@color/gray_placeholder" />
            <View android:layout_width="60dp" android:layout_height="60dp" android:layout_margin="8dp" android:background="@color/gray_placeholder" />

        </GridLayout>

        <View
            android:layout_width="140dp"
            android:layout_height="18dp"
            android:layout_marginTop="16dp"
            android:background="@color/gray_placeholder" />

        <!-- Location Skeleton -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:background="#F0F0F0" />
            
        <View
            android:layout_width="150dp"
            android:layout_height="22dp"
            android:layout_marginTop="20dp"
            android:background="@color/gray_placeholder" />

        <View
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="16dp"
            android:background="@color/gray_placeholder" />

        <View
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="24dp"
            android:background="@color/gray_placeholder" />

        <!-- Rules Skeleton -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:background="#F0F0F0" />

        <View
            android:layout_width="160dp"
            android:layout_height="22dp"
            android:layout_marginTop="20dp"
            android:background="@color/gray_placeholder" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:background="@color/gray_placeholder" />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:background="@color/gray_placeholder" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
