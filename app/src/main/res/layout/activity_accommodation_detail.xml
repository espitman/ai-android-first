<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <!-- Fixed Header (Style matched with MainActivity) -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:layoutDirection="rtl">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/ic_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="بازگشت" />

        <TextView
            android:id="@+id/tvHeaderTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="جزئیات اقامتگاه"
            android:textColor="#333"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/skeletonLayout"
            layout="@layout/skeleton_accommodation_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" />

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appBar"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@color/white">

                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed">

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/vpImageAlbum"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:transitionName="shared_image"
                        android:layoutDirection="rtl"
                        app:layout_collapseMode="parallax" />

                    <TextView
                        android:id="@+id/tvImageCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|right"
                        android:layout_margin="16dp"
                        android:background="@drawable/rounded_corner_bg"
                        android:backgroundTint="#80000000"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:visibility="gone"
                        app:layout_collapseMode="parallax" />

                    <TextView
                        android:id="@+id/tvAccommodationCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|left"
                        android:layout_margin="16dp"
                        android:background="@drawable/rounded_corner_bg"
                        android:backgroundTint="#B3000000"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        app:layout_collapseMode="parallax" />

                </com.google.android.material.appbar.CollapsingToolbarLayout>
            </com.google.android.material.appbar.AppBarLayout>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:layoutDirection="rtl">

                    <TextView
                        android:id="@+id/tvDetailTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#333"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:transitionName="shared_title" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="8dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_star" />

                        <TextView
                            android:id="@+id/tvRatingScore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="۴.۴"
                            android:textColor="#333"
                            android:textStyle="bold"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvReviewCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="(۱۱۸ نظر ثبت شده)"
                            android:textColor="#888"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="4dp"
                            android:layout_height="4dp"
                            android:layout_marginHorizontal="8dp"
                            android:background="@drawable/rounded_corner_bg"
                            android:backgroundTint="#DDD" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_location" />

                        <TextView
                            android:id="@+id/tvLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="استان هرمزگان، قشم"
                            android:textColor="#333"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvDiscountBadge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/rounded_corner_bg"
                        android:backgroundTint="#FF4455"
                        android:paddingHorizontal="24dp"
                        android:paddingVertical="12dp"
                        android:text="٪ تا ۱۵ درصد تخفیف"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:visibility="gone" />



                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="24dp"
                        android:background="#F0F0F0" />

                    <!-- Host Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="20dp">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/ivHostAvatar"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:scaleType="centerCrop"
                            android:padding="2dp"
                            android:layout_marginEnd="16dp"
                            app:strokeColor="#1d2830"
                            app:strokeWidth="1.5dp"
                            app:shapeAppearanceOverlay="@style/CircleImage"
                            android:src="@color/gray_placeholder" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvAccTypeFa"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="نوع اقامتگاه"
                                android:textColor="#222"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvHostSubtitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="اجاره سوئیت در قشم به میزبانی ..."
                                android:textColor="#444"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F0F0F0" />

                    <!-- Secondary Badges -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvBadgesSecondary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:nestedScrollingEnabled="false"
                        android:overScrollMode="never" />

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        android:background="#F0F0F0" />

                    <!-- Main Badges -->
                    <LinearLayout
                        android:id="@+id/llMainBadges"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="16dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tvMainBadgesTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="مشخصات کلی"
                            android:textColor="#1d2830"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvBadgesMain"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false"
                            android:overScrollMode="never" />

                    </LinearLayout>

                    <!-- Bottom Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="8dp"
                        android:background="#F0F0F0" />

                    <!-- Description Section -->
                    <LinearLayout
                        android:id="@+id/llDescriptionSection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingVertical="20dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tvDescriptionTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="توضیحات اقامتگاه"
                            android:textColor="#1d2830"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvDescriptionSummary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:ellipsize="end"
                            android:lineSpacingExtra="4dp"
                            android:maxLines="4"
                            android:textColor="#444"
                            android:textSize="15sp" />

                        <LinearLayout
                            android:id="@+id/btnShowMoreDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:background="?attr/selectableItemBackground"
                            android:padding="4dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="توضیحات بیشتر"
                                android:textColor="#1d2830"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_marginStart="4dp"
                                android:src="@drawable/ic_down"
                                app:tint="#1d2830" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F0F0F0" />

                    <!-- Amenities Section -->
                    <LinearLayout
                        android:id="@+id/llAmenitiesSection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingVertical="20dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="امکانات اقامتگاه"
                            android:textColor="#1d2830"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvAmenities"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:nestedScrollingEnabled="false" />

                        <LinearLayout
                            android:id="@+id/llMissedAmenities"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="16dp"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="امکاناتی که این اقامتگاه ندارد"
                                android:textColor="#1d2830"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvMissedAmenities"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:nestedScrollingEnabled="false"
                                android:alpha="0.6" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/btnShowAllAmenities"
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            android:layout_marginTop="24dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:background="@drawable/bg_button_grey"
                            android:clickable="true"
                            android:focusable="true">

                            <TextView
                                android:id="@+id/tvShowAllAmenities"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="مشاهده همه امکانات"
                                android:textColor="#1d2830"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/vazirmatn" />

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_marginStart="8dp"
                                android:src="@drawable/ic_down"
                                app:tint="#1d2830"
                                android:rotation="90" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F0F0F0" />

                    <!-- Location Section -->
                    <LinearLayout
                        android:id="@+id/llLocationSection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingVertical="24dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="موقعیت مکانی"
                            android:textColor="#1d2830"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/vazirmatn" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="220dp"
                            android:layout_marginTop="16dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp">

                            <fragment
                                android:id="@+id/mapFragment"
                                android:name="com.google.android.gms.maps.SupportMapFragment"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                            
                            <!-- Overlay Circle for fuzzy location -->
                            <View
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:background="@drawable/fuzzy_location_circle" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/tvLocationNote"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="موقعیت مکانی دقیق پس از رزرو کامل ارسال خواهد شد."
                            android:textColor="#444"
                            android:textSize="14sp"
                            android:fontFamily="@font/vazirmatn"
                            android:gravity="right" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="24dp"
                            android:background="#F0F0F0" />

                        <TextView
                            android:id="@+id/tvNeighborhoodTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:text="اطلاعات و فاصله مراکز نزدیک"
                            android:textColor="#1d2830"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/vazirmatn" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="تمامی فواصل به صورت حدودی و در شرایط معمولی ترافیک می‌باشد."
                            android:textColor="#666"
                            android:textSize="13sp"
                            android:fontFamily="@font/vazirmatn" />

                        <LinearLayout
                            android:id="@+id/llNeighborhoodList"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </FrameLayout>
</LinearLayout>
